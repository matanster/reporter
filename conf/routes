# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET  /                                controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET  /assets/*file                    controllers.Assets.at(path="/public", file)

# Show article extract
GET  /showExtractFoundation/:article  controllers.Application.showExtractFoundation(runID: String ?= "ubuntu-2014-12-15 21:09:52.072", article: String)

# Show article extract
GET  /showOriginal/:article           controllers.Application.showOriginal(article: String)

# Map the JS resource paths - is this really still relevant?!
GET  /*file                           controllers.Assets.versioned(path="/public", file: Asset)
